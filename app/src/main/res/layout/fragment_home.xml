<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.maratonainterfatecs.fragments.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/logo_interfatecs_black" />

            <TextView
                android:id="@+id/text_edicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="5º Edição - Maratona Interfatecs"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_sede"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="FACULDADE DE TECNOLOGIA DE SÃO PAULO"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="@string/textHome"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
